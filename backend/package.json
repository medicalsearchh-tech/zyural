{
  "name": "elearning-backend",
  "version": "1.0.0",
  "description": "E-Learning Platform Backend",
  "main": "server.js",
  "scripts": {
    "start": "set NODE_ENV=production && node server.js",
    "start:migrate": "npm run migrate && npm start",
    "dev": "nodemon server.js",
    "dev:prod": "NODE_ENV=production nodemon server.js",
    "dev:windows": "set NODE_ENV=development && nodemon server.js",
    "prod:windows": "set NODE_ENV=production && node server.js",
    "test": "NODE_ENV=test node server.js",
    "env:check": "node -e \"console.log('NODE_ENV:', process.env.NODE_ENV); require('dotenv').config(); console.log('DB_HOST:', process.env.DB_HOST); console.log('FRONTEND_URL:', process.env.FRONTEND_URL);\"",
    "setup": "node setup.js",
    "db:seed": "npx sequelize-cli db:seed:all",
    "db:reset": "npx sequelize-cli db:migrate:undo:all && npm run db:migrate && npm run db:seed"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cloudinary": "^1.41.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1",
    "node-fetch": "^2.7.0",
    "nodemailer": "^6.9.7",
    "passport": "^0.7.0",
    "passport-google-oauth20": "^2.0.0",
    "pdfkit": "^0.13.0",
    "pg": "^8.11.3",
    "pg-hstore": "^2.3.4",
    "puppeteer": "^24.25.0",
    "sequelize": "^6.35.2",
    "sharp": "^0.34.4",
    "stripe": "^14.9.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "sequelize-cli": "^6.6.2"
  },
  "author": "Shenlong"
}
